{
    "manifest_version": 2,
    "name": "Tagged",
    "description": "A Chrome tagged bookmarking system. ",
    "version": "1.0.0",
    "author": "Gustavo Vargas <xgvargas@gmail.com",

    /*"default_locale": "en",*/

    "homepage_url": "http://path/to/homepage",

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": [
        "tabs",
        "bookmarks",
        "storage"
    ],

    "browser_action": {
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        },
        "default_title": "Tagged",
        "default_popup": "popup.html"
    },

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "chrome_url_overrides": {
        "bookmarks": "manager.html"
    },
    "omnibox": {
        "keyword": "tag"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "update_url": "http://path/to/updateInfo.xml"
}
